{
  "name": "anki-splitter",
  "version": "1.0.0",
  "private": true,
  "description": "Anki Card Splitter - Web GUI for managing Anki cards",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:web\"",
    "dev:server": "bun run --watch packages/server/src/index.ts",
    "dev:web": "bun run --cwd packages/web dev",
    "build": "bun run build:core && bun run build:server && bun run build:web",
    "build:core": "bun run --cwd packages/core build",
    "build:server": "bun run --cwd packages/server build",
    "build:web": "bun run --cwd packages/web build",
    "cli": "bun run src/index.ts",
    "cli:status": "bun run src/index.ts status",
    "cli:split": "bun run src/index.ts split",
    "typecheck": "bun run tsc --noEmit"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "chalk": "^5.3.0",
    "diff": "^5.2.0",
    "dotenv": "^16.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
